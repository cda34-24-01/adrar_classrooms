{% extends 'base.html.twig' %}

{% block title %}Vehicule index
{% endblock %}

{% block body %}
	<h1>Vehicule index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
			</tr>
		</thead>
		<tbody>
			{% for chapter in chapters %}
				<tr>
					<td>{{ chapter.id }}</td>
					<td>{{ chapter.title }}</td>
					<td>
						<a href="{{ path('app_chapter_show', {'id': chapter.id}) }}">show</a>
						<a href="{{ path('app_chapters_edit', {'id': chapter.id}) }}">edit</a>
					</td>
					<td>
						{{chapter.posted}}</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_chapters_new') }}">Create new</a>
{% endblock %}
