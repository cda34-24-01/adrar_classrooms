{% extends 'base.html.twig' %}

{% block title %}
  Adrar Classrooms | Courses | {{ course.title }}
{% endblock %}

{% block body %}
  <style>
    .main-container {
      min-height: 100vh;
      margin: 0;
      background-color: white;
    }
    .course-header {
      height: 10em;
      background-color: #5584ac;
      padding: 10px;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .info-course-container {
      max-width: 1000px;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
      gap: 1em;
    }
    .info-course-container h1 {
      margin: 0;
    }
    .header-course-container {
      display: flex;
      justify-content: center;
      gap: 1em;
      align-items: end;
      margin: 0;
    }
    .header-course-container p {
      margin: 0;
      font-size: 1em;
      font-weight: bold;
    }
  </style>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

  <main class="main-container">
    <div class="course-header">
      <div class="info-course-container">
        <h1>{{ course.title }}</h1>
        <div class="header-course-container">
          <span class="material-symbols-outlined">signal_cellular_alt</span>
          <p>{{ course.level }}</p>
          <span class="material-symbols-outlined">schedule</span>
          <p>{{ course.estimated_time }}</p>
          <span class="material-symbols-outlined">stairs</span>
          <p>{{ course.chapters|length }}</p>
        </div>
        <div class="description-course-container">
          <p>{{ course.description }}</p>
        </div>
      </div>
    </div>
    <div class="chapters-container">
      {% for chapter in course.chapters %}
        <div class="chapter-item"></div>
      {% endfor %}
    </div>
  </main>
{% endblock %}
