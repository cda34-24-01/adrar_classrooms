{% extends 'base.html.twig' %}

{% block title %}
  Adrar Classrooms | Courses | {{ course.title }}
{% endblock %}

{% block body %}
  <style>
    .main-container {
      min-height: 100vh;
      margin: 0;
      background-color: white;
      position: relative;
    }
    .course-header {
      background-color: #5584ac;
      padding: 10px;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 30px 0;
    }
    .info-course-container {
      max-width: 1000px;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
    }
    .info-course-container h1 {
    }
    .header-course-container {
      display: flex;
      justify-content: center;
      align-items: end;
      margin: 0;
      gap: 1em;
    }
    .header-course-container p {
      margin: 0;
      font-size: 1em;
      font-weight: bold;
    }
    .chapters-container {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 1.3rem;
      gap: 0.5rem;
      margin-top: 0.5em;
      color: grey;
    }
    .chapter-item {
      width: 30px;
      height: 70%;
      border: 1px solid black;
      cursor: pointer;
    }
    .content-chapter-container {
      max-width: 800px;
      margin: 0 auto;
      min-height: 60vh;
    }
    .content-chapter-container h1 {
      font-size: 2.2rem;
    }
    .content-chapter-container p {
      font-size: 1.2rem;
    }
    .container-bottons-chapter {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 1em;
      width: 100%;
      height: 200px;
    }
    .container-bottons-chapter button {
      cursor: pointer;
      padding: 7px 15px;
      font-weight: bold;
      font-size: 1rem;
      border-radius: 5px;
      border: #5584ac solid 2px;
    }
    .validation-chapter-container button {
      background-color: #5584ac;
      color: white;
    }
    .navigation-chapter-container {
      display: flex;
      gap: 1em;
    }
    .navigation-chapter-container button {
      color: #5584ac;
      background-color: white;
    }
    .back-to-courses-container {
      display: flex;
      justify-content: center;
      align-items: center;
      margin-top: 2rem;
      gap: 1em;
    }
    .back-to-courses-container a {
      font-size: 1.2rem;
      text-decoration: none;
      color: black;
      font-weight: 600;
    }
  </style>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

  <main class="main-container">
    <div class="course-header">
      <div class="info-course-container">
        <h1>{{ course.title }}</h1>
        <div class="header-course-container">
          <span class="material-symbols-outlined">signal_cellular_alt</span>
          <p>{{ course.level }}</p>
          <span class="material-symbols-outlined">schedule</span>
          <p>{{ course.estimated_time }}</p>
          <span class="material-symbols-outlined">stairs</span>
          <p>{{ course.chapter|length }}</p>
        </div>
        <div class="description-course-container">
          {# <p>{{ course.description }}</p> #}
        </div>
        <div class="back-to-courses-container">
          <span class="material-symbols-outlined">arrow_back</span><a href="/cours">Retour à la liste des cours</a>
        </div>
      </div>
    </div>
    {% if chapter is not null %}
      <div class="chapters-container">
        <span class="material-symbols-outlined">flag_circle</span>
        {% for chapter in chapters %}
          {# <a href="/cours/{{ course.id }}/{{ chapter.id }}" class="chapter-item" style="{{ chapter.validated ? 'background-color: green' : 'background-color: red' }}"></a> #}
          <a href="/cours/{{ course.id }}/{{ chapter.id }}" class="chapter-item"></a>
        {% endfor %}
        <span class="material-symbols-outlined">brightness_5</span>
      </div>
      <div class="content-chapter-container">
        <h1>{{ chapter.title }}</h1>
        <p>{{ chapter.content }}</p>
      </div>
      <div class="container-bottons-chapter">
        <div class="validation-chapter-container">
          <button>Je valide ce chapitre et passe au suivant</button>
        </div>
        <div class="navigation-chapter-container">
          {% if previousChapter is not null %}
            <button onclick="window.location.href = '/cours/{{ course.id }}/{{ previousChapter.id }}'">Passer au chapitre précédent</button>
          {% endif %}

          {% if nextChapter is not null %}
            <button onclick="window.location.href = '/cours/{{ course.id }}/{{ nextChapter.id }}'">Passer au chapitre suivant</button>
          {% endif %}
        </div>
      </div>
    {% else %}
      <span>Aucun chapitre</span>
    {% endif %}
  </main>
{% endblock %}
